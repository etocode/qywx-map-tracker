.settings-group {
  margin: 24rpx 0;
  background: #fff;
  border-radius: 12rpx;
  padding: 0 24rpx;
}

.settings-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-label {
  font-size: 30rpx;
  color: #333;
}

.settings-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.settings-input {
  width: 160rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 28rpx;
  text-align: right;
}

.save-btn {
  margin: 40rpx 24rpx 0;
}
